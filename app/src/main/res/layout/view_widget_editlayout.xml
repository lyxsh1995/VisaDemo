<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editlayout_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/shape_layout_backgroud_true"
    android:gravity="center_vertical"
    android:paddingLeft="30dp">

    <ImageView
        android:id="@+id/editlayout_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_visa_logo" />

    <EditText
        android:id="@+id/editlayout_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:ems="10"
        android:hint="请输入您的卡号"
        android:inputType="textPersonName" />
</LinearLayout>